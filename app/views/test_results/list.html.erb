<div style="float: left ;margin-right:10px;padding:0; width:75%">
  <table style="width:400px">
    <tr>
      <%= th_tag("No", :rowspan => 2) %>
      <%= th_tag('Test Case', :rowspan => 2) %>
      <%= th_tag('Execution Type', :rowspan => 2) %>
      <%= th_tag('Test Target', :colspan => 2) %>
      <%= th_tag('Test Case', :colspan => 1) %>
    </tr>
    <tr>
      <%= ths_tag('Pass', 'Fail', 'Fail') %>
    </tr>
    <% @test_results.each_index do |index| %>
      <% test_result = @test_results[index] %>
      <% test_case = test_result.test_case %>
      <tr id=<%= test_result.id %> >
        <td> <%= index + 1 %> </td>
        <td> <%= truncate(test_case.name) %> </td>
        <%= tds_tag(test_result.test_target_pass, test_result.test_target_fail,
                    test_result.test_case_fail) %>
      </tr>
    <% end %>
  </table>
</div>