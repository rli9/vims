<div style="float:left">
  <%= form_tag( {:action => 'create'}, :multipart => true) do %>
    <table border='1' bordercolor='#888888'>
        <tr>
          <th>*Name</th> <%= td_tag(text_field 'member', 'name') %>
        </tr>
        <tr>
          <th>*Email</th> <%= td_tag(text_field 'member', 'email') %>
        </tr>
        <tr>
          <th>*Password</th> <%= td_tag(password_field 'member', 'password') %>
        </tr>
        <tr>
          <th>*Picture</th> <%= td_tag(file_field('picture', 'picture')) %>
        </tr>
        <tr>
          <%= td_tag(submit_button_green_tag("Create"), :colspan => 2) %>
        </tr>
    </table>
  <% end %>
</div>